APP_NAME=StudyBuddy API
ENV=dev

# Comma-separated allowed origins
# Use the exact origin your frontend runs on (Vite default is http://localhost:5173)
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# Database
SQLITE_PATH=./app.db

# Google Identity (client-side ID token verification)
# Used to verify the Google ID token sent from the browser.
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com

# Optional: only needed if you later implement OAuth "authorization code" exchange on the server.
# NOT used by the current /api/v1/auth/google implementation.
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# JWT signing key (change this in prod)
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRES_MINUTES=10080
